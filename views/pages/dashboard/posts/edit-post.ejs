<%- include("../../../partials/header.ejs") %>

<div class="container-fluid w-75">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-10">
            <div class="card card-body my-5 mx-5">
                <h5 class="my-3"><%= title %></h5>
               <form action="/posts/edit/<%= post._id %>" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="title">Your Title:</label>
                        <input type="text" name="title" id="title" value="<%= post.title && post.title %>" class="form-control <%= error.title ? "is-invalid" : "" %>" placeholder="Enter Your Post Title">
                        <div class="invalid-feedback"><%= error.title && error.title %></div>
                    </div>
                    <div class="form-group">
                        <label for="tiny-mce-post-body">Your Post Body:</label>
                        <textarea name="body" id="tiny-mce-post-body" class="form-control <%= error.body ? "is-invalid" : "" %>" placeholder="Enter Your Post Body" rows="10"><%= post.body && post.body %></textarea>
                        <div class="invalid-feedback"><%= error.body && error.body %></div>
                    </div>
                    <div class="form-group">
                        <label for="tags">Enter Your Tags:</label>
                        <input type="text" name="tags" id="tags" value="<%= post.tags.length > 0 ? post.tags.join(", ") : '' %>" class="form-control <%= error.tags ? "is-invalid" : "" %>" placeholder="tag1, tag2, tag3">
                        <div class="invalid-feedback"><%= error.tags && error.tags %></div>
                    </div>
                    <% if (post.thumbnail) { %>
                     <label for="">Post Thumbnail</label>
                     <img src="<%= post.thumbnail %>" alt="Post Thumbnail" id="thumbnail" class="img-fluid mb-4">
                    <% } %>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Upload</span>
                        </div>
                        <div class="custom-file">
                            <input type="file" name="post-thumbnail" class="custom-file-input" id="inputGroupFile">
                            <label for="inputGroupFile" class="custom-file-label">Choose File</label>
                        </div>
                    </div>
                    <input type="submit" class="btn btn-primary" value="Update Post">
               </form>
            </div>
        </div>
    </div>
</div>




<%- include("../../../partials/footer.ejs") %>
<script src="https://cdn.tiny.cloud/1/718ch3kb8nm2cc0h5d4kb5lwxbcwgzt2q5vone5qrzlxg3mi/tinymce/5/tinymce.min.js"></script>
<script src="/scripts/tinymce.js"></script>

<script>
    $("#inputGroupFile").on("change", function (e) {
        let filename = e.target.files[0].name
        $(this).next(".custom-file-label").html(filename)
    })
</script>

</body>
</html>