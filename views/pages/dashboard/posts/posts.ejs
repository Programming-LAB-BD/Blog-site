<%- include("../../../partials/header.ejs") %>

<div class="container-fluid w-75">
    <div class="row">
        <div class="col-md-2">
            <%- include('../../../partials/sidebar.ejs') %>
        </div>
        <div class="col-md-10">
            <div class="card card-body my-5">
                <h5>List of My Post</h5>
            <div class="row">
                <% if (posts.length === 0) { %>
                    <div class="text-center text-muted">
                       <p>There is no post avilable right now</p>
                       <a href="/posts/create" class="btn btn-primary btn-sm">Create Post Now</a>
                    </div>
                   <% } else { %>
                       <% for( let post of posts.reverse() ){ %>
                       <div class="card col-sm-3 m-3">
                        <% if (post.thumbnail) { %>
                         <img src="<%= post.thumbnail %>" alt="<%= post.title %>" class="card-img-top mt-3">
                        <% } %>
                        <a href="/posts/edit/<%= post._id %>" style="color: #222;" class="mt-3">
                            <h5><%= post.title %></h5>
                        </a>
                       </div>
                       <% } %>
                   <% } %>
            </div>
            </div>
        </div>
    </div>
</div>




<%- include("../../../partials/footer.ejs") %>

</body>
</html>